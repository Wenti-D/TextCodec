                     Text="{x:Bind ViewModel.RecoverTextList[8], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="2"
                     Grid.Column="4"/>
            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[9], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="2"
                     Grid.Column="5"/>

            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[10], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="3"
                     Grid.Column="1"/>
            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[11], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="3"
                     Grid.Column="2"/>
            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[13], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="3"
                     Grid.Column="4"/>
            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[14], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="3"
                     Grid.Column="5"/>

            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[15], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="4"
                     Grid.Column="1"/>
            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[16], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="4"
                     Grid.Column="2"/>
            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[17], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="4"
                     Grid.Column="3"/>
            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[19], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="4"
                     Grid.Column="5"/>

            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[20], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="5"
                     Grid.Column="1"/>
            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[21], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="5"
                     Grid.Column="2"/>
            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[22], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="5"
                     Grid.Column="3"/>
            <TextBox Margin="2"
                     Text="{x:Bind ViewModel.RecoverTextList[23], Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     IsSpellCheckEnabled="False"
                     Grid.Row="5"
                     Grid.Column="4"/>
        </Grid>
    </Grid>
</Page>
